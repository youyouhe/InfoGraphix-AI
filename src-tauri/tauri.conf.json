{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "InfoGraphix AI",
  "version": "0.0.2",
  "identifier": "ai.infographix.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "InfoGraphix AI",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 1000,
        "minHeight": 700
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Productivity",
    "shortDescription": "AI-powered infographic generator",
    "longDescription": "Transform research topics into visually stunning infographic reports using AI with multi-provider LLM support.",
    "publisher": "InfoGraphix AI"
  }
}
